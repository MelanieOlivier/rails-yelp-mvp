<%= render "navbar" %>

<div class="container">
<h1 class="text-center">Add a review</h1>
  <div class=“row”>
    <div class="d-flex justify-content-center">
      <div class="w-50">
        <%= simple_form_for [@restaurant, @review] do |f| %>
          <%= f.input :rating %>
          <%= f.input :content %>
          <%= f.submit class:"btn btn-dark w-100 mt-3"%>
        <% end %>
      </div>
    </div>
  </div>

</div>
